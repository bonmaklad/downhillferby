---
import { faqs } from '../data/faq';
---

<section class="section-pad bg-white">
	<div class="mx-auto max-w-5xl space-y-8 px-6">
		<div class="space-y-4">
			<p class="text-xs uppercase tracking-[0.34em] text-brand-red">Need-to-know</p>
			<h2 class="section-heading">FAQs</h2>
			<p class="text-lg text-ink/80">Straight answers so you can focus on the build and the thrill.</p>
		</div>
		<div class="space-y-4">
			{faqs.map((item) => (
				<details class="group rounded-3xl border border-brand-silver/70 bg-white p-6 shadow-sm transition">
					<summary class="flex cursor-pointer items-center justify-between gap-4 text-sm font-semibold uppercase tracking-[0.26em] text-brand-ash">
						{item.question}
						<span class="text-brand-red transition group-open:rotate-45">+</span>
					</summary>
					<p class="mt-4 text-base leading-relaxed text-ink/80">{item.answer}</p>
				</details>
			))}
		</div>
	</div>
</section>
