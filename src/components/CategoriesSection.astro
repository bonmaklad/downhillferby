---
import { categories } from '../data/categories';
---

<section class="section-pad bg-white">
	<div class="mx-auto max-w-6xl px-6">
		<div class="mb-10 flex flex-col gap-6 lg:flex-row lg:items-end lg:justify-between">
			<div class="max-w-3xl space-y-4">
				<p class="text-xs uppercase tracking-[0.34em] text-brand-red">Choose your grid</p>
				<h2 class="section-heading">Categories for every crew</h2>
				<p class="max-w-2xl text-lg text-ink/80">
					Select your division, show up with a compliant kart, and be ready for two timed runs plus finals if you make the cut. $10 early-bird entry, $50 on the day.
				</p>
			</div>
			<a href="#signup" class="inline-flex items-center justify-center rounded-full border border-brand-red px-6 py-3 text-sm font-semibold uppercase tracking-[0.28em] text-brand-red transition hover:bg-brand-red hover:text-white">
				Register now
			</a>
		</div>
		<div class="grid gap-6 md:grid-cols-2">
			{categories.map((category) => (
				<article class="group relative overflow-hidden rounded-3xl border border-brand-silver/60 bg-white p-6 shadow-lg transition hover:-translate-y-1 hover:shadow-2xl">
					<div class="absolute -right-12 top-1/2 h-56 w-56 -translate-y-1/2 rounded-full bg-brand-yellow/40 blur-3xl transition group-hover:bg-brand-red/30"></div>
					<h3 class="text-3xl font-display uppercase tracking-[0.3em] text-brand-ash">{category.name}</h3>
					<p class="mt-2 text-sm uppercase tracking-[0.26em] text-brand-red">{category.ageRange}</p>
					<p class="mt-4 text-base leading-relaxed text-ink/80">{category.description}</p>
					<!-- Mobile: single CTA linking to signup -->
					<a href="/#signup" class="mt-6 inline-flex items-center justify-center rounded-full bg-brand-yellow px-4 py-2 text-xs font-semibold uppercase tracking-[0.28em] text-ink transition hover:shadow-neon sm:hidden">
						${category.fee.early} Pre-reg
					</a>
					<!-- Desktop: show both price pills -->
					<div class="mt-6 hidden gap-4 text-sm uppercase tracking-[0.28em] text-brand-ash/80 sm:flex">
						<span class="rounded-full bg-brand-yellow/80 px-4 py-2 text-ink">${category.fee.early} pre-reg</span>
						<span class="rounded-full border border-brand-ash/20 px-4 py-2">${category.fee.eventDay} race day</span>
					</div>
				</article>
			))}
		</div>
	</div>
</section>
