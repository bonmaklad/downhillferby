---
import { featureVideos } from '../data/media';
---

<section class="section-pad bg-brand-ash text-white">
	<div class="mx-auto max-w-6xl space-y-8 px-6">
		<div class="flex flex-col gap-4 lg:flex-row lg:items-end lg:justify-between">
			<div class="space-y-3">
				<p class="text-xs uppercase tracking-[0.34em] !text-brand-yellow">Watch the action</p>
				<h2 class="section-heading text-white">Meet the hill</h2>
			</div>
			<p class="max-w-2xl text-lg text-black/70">
				Rewatch the chaos, then plan your build. Share with your crew to show them whatâ€™s waiting.
			</p>
		</div>
		<div class="grid gap-6 lg:grid-cols-2">
			{featureVideos.map((video) => (
				<a
					href={video.url}
					target="_blank"
					rel="noreferrer noopener"
					class="group relative flex min-h-[220px] overflow-hidden rounded-3xl border border-white/20 bg-white/10 p-6 backdrop-blur transition hover:border-brand-yellow/60"
				>
					<div class="absolute inset-0 bg-gradient-to-tr from-black/60 via-black/40 to-transparent"></div>
					<div class="relative z-10 flex w-full flex-col justify-between">
						<div>
							<span class="inline-flex items-center gap-2 rounded-full bg-brand-yellow px-3 py-1 text-xs font-semibold uppercase tracking-[0.28em] text-ink">
								<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="h-4 w-4">
									<path stroke-linecap="round" stroke-linejoin="round" d="M15.75 9V5.25A2.25 2.25 0 0 0 13.5 3h-3A2.25 2.25 0 0 0 8.25 5.25V9m7.5 0H8.25m7.5 0H18a2.25 2.25 0 0 1 2.25 2.25v6A2.25 2.25 0 0 1 18 19.5H6a2.25 2.25 0 0 1-2.25-2.25v-6A2.25 2.25 0 0 1 6 9h1.5m7.5 0V5.25m0 0h-7.5M9 13.5l2.25 2.25L15 12" />
								</svg>
								{video.platform}
							</span>
							<h3 class="mt-4 text-2xl font-display uppercase tracking-[0.3em] !text-brand-yellow">{video.title}</h3>
							<p class="mt-3 text-sm text-white/80">{video.description}</p>
						</div>
						<span class="flex items-center gap-2 text-sm uppercase tracking-[0.28em] text-brand-yellow/80">
							Watch now
							<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="h-5 w-5">
								<path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12h15m0 0-6.75-6.75M19.5 12l-6.75 6.75" />
							</svg>
						</span>
					</div>
				</a>
			))}
		</div>
	</div>
</section>
