{
	"hosting": {
		"public": "dist",
		"ignore": [
			"firebase.json",
			"**/.*",
			"**/node_modules/**"
		],
		"predeploy": [
			"npm run build"
		],
		"headers": [
			{
				"source": "**/*.@(js|css|svg|png|jpg|jpeg|webp|ico)",
				"headers": [{ "key": "Cache-Control", "value": "public,max-age=31536000,immutable" }]
			},
			{
				"source": "**/*.html",
				"headers": [{ "key": "Cache-Control", "value": "public,max-age=600" }]
			}
		]
	}
}
